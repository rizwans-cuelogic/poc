function validateform(myform){
	var pas=myform.password.value;
	var pas1=myform.password1.value;
	var user=myform.username.value;
	if(user.length<6){
		document.getElementById("username1").innerHTML="username must be atleast 6 character long";
		return false;
	}
	if(pas.length<8){
		document.getElementById("pass1").innerHTML="password must be atleast 8 character long";
		return false;

	}

	if(pas.length>16){
		document.getElementById("pass1").innerHTML="password must not be greater than 16";
		return false;

	}

	if (pas!=pas1){
		document.getElementById("pass1").innerHTML="password and confirm password must be same";
		return false;
	}


	if(pas==user){
		document.getElementById("pass1").innerHTML="password and username must be different";
		return false;
	}

	var reg=/[0-9]/;

	if(!reg.test(pas)){
		document.getElementById("pass1").innerHTML="password must contain atleast one number";
		return false;

	}

	var reg=/[a-z]/;
	if(!reg.test(pas)){
		document.getElementById("pass1").innerHTML="password must contain one lowercase letter";
		return false;
	}

	var reg=/[A-Z]/;
	if(!reg.test(pas)){
		document.getElementById("pass1").innerHTML="password must contain one uppercase letter";
		return false;
	}
	
	if(document.getElementById("file1").files.length!=0){
		var ext=document.getElementById("file1").val().split('.').pop();
		if(['png','jpg'].indexOf(ext) > -1){	
			document.getElementById("logo1").innerHTML="file is not jpg and png format";
			return false;
		}
	}		
	
	return true;
}

